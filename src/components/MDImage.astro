---
const props = Astro.props;
import { Image } from "astro:assets";

const images = import.meta.glob("../images/*");
---

<figure class="w-max-full flex flex-col items-center my-7 max-w-3xl">
  <Image
    src={import(props.src.src)}
    alt={props.alt}
    width={20}
    height={20}
    class="w-full rounded-2xl"
    loading="eager"
  />
  <figcaption class="mt-2 text-sm text-center text-gray-500 dark:text-gray-400 font-poppins">
    {props.title}
  </figcaption>
</figure>
