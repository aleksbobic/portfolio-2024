---
import { OpenBook, HomeSimple, Collapse } from "iconoir-react";
import Navigation from "@/components/Navigation.astro";
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/700.css';
import '@fontsource-variable/archivo';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script>
  const imageContainerButton = document.getElementById("image-container-button")
  const imageContainer = document.getElementById("image-container")
  const imageContainerImage = document.getElementById("image-container-image")

  imageContainerButton?.addEventListener("click", () => {
    const container = document.getElementById("image-container");
    container?.classList.remove("flex");
    container?.classList.add("hidden");
  })

  imageContainer?.addEventListener("click", () => {
    const container = document.getElementById("image-container");
    container?.classList.remove("flex");
    container?.classList.add("hidden");
  })

  imageContainerImage?.addEventListener("click", (e) => {
    e.preventDefault()
    e.stopPropagation()
  })

</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Hi I'm Aleks, a seasoned software engineer and researcher with multiple years of experience in software engineering, data science and research." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="pt-28">
    <header class="fixed top-1 px-5 py-4 w-full z-50">
      <Navigation />
    </header>
    <slot />

    <footer
      class="container flex flex-col gap-2 justify-center items-center w-full px-5 py-2 mt-20 mb-20 mx-auto max-w-screen-lg font-bold"
    >
      <a
        class="opacity-50 hover:opacity-100 transition-all hover:cursor-pointer font-archivo"
        href="/"
      >
        Home
      </a>

      <a
        class="opacity-50 hover:opacity-100 transition-all hover:cursor-pointer font-archivo"
        href="/posts"
      >
        Blog
      </a>

      <a
        class="opacity-50 hover:opacity-100 transition-all hover:cursor-pointer font-archivo"
        href="mailto:contact@abobic.com"
      >
        contact@abobic.com
      </a>
    </footer>

    <div
      id="image-container"
      class="fixed w-full h-full top-0 left-0 dark:bg-black/40 bg-white/40 hidden flex-col items-center justify-center p-14 backdrop-blur-md z-50 "
    >
      <button
        id="image-container-button"
        class="fixed top-6 right-6 transition-all hover:scale-125 hover:bg-white/5 rounded-lg p-1"
      >
        <Collapse />
      </button>
      <img id="image-container-image" src="" alt="" class="w-auto h-auto" />
      <p id="image-container-caption" class="text-sm text-center text-gray-700 dark:text-gray-400 font-poppins pb-7 pt-4">
      </p>
    </div>
  </body>
</html>
